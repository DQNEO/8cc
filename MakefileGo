GO_OBJS=main.go header.go lex.go adapter.go util.go gen.go parse.go debug.go

8gg.linux: $(GO_OBJS)
	GOOS=linux  GOARCH=amd64 go build -o 8gg.linux $(GO_OBJS)

8gg.mac:  $(GO_OBJS)
	GOOS=darwin GOARCH=amd64 go build -o 8gg.mac   $(GO_OBJS)

clean:
	rm -f 8gg.* 8cc
	make clean

8cc: 8gg.linux
	cp 8gg.linux 8cc

fmt:
	gofmt -w *.go

test: 8cc
	./test.sh

nqueen: 8gg.linux
	./8gg.linux < sample/nqueen.c > nqueen.s
	gcc -no-pie -o nqueen nqueen.s
